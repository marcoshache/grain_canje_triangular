<odoo>
    <record id="view_register_grain_lsg_wizard" model="ir.ui.view">
        <field name="name">register.grain.lsg.wizard.form</field>
        <field name="model">register.grain.lsg.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar LSG">
                <group>
                    <field name="date"/>
                    <field name="coe"/>
                    <field name="producer_id"/>
                    <field name="broker_id"/>
                    <field name="product_id"/>
                </group>

                <group string="Datos">
                    <field name="delivery_date"/>
                    <field name="port"/>
                    <field name="grain_grade"/>
                </group>

                <group string="Cantidad / Precio">
                    <field name="qty_kg"/>
                    <field name="price_per_kg"/>
                    <field name="qty_tn" readonly="1"/>
                    <field name="price_per_tn" readonly="1"/>
                </group>

                <group string="Impuestos / Totales">
                    <field name="tax_id"/>
                    <field name="amount_untaxed" readonly="1"/>
                    <field name="amount_tax" readonly="1"/>
                    <field name="amount_total" readonly="1"/>
                </group>

                <group string="ConfiguraciÃ³n contable">
                    <field name="clearing_account_id"/>
                    <field name="journal_id"/>
                </group>

                <footer>
                    <button string="Crear y Publicar"
                            name="action_create_lsg"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_register_grain_lsg_wizard" model="ir.actions.act_window">
        <field name="name">Registrar LSG</field>
        <field name="res_model">register.grain.lsg.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_register_grain_lsg_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>
