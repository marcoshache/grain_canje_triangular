<odoo>
    <record id="view_grain_liquidation_tree" model="ir.ui.view">
        <field name="name">grain.liquidation.tree</field>
        <field name="model">grain.liquidation</field>
        <field name="arch" type="xml">
            <tree string="Liquidaciones (LPG/LSG)">
                <field name="date"/>
                <field name="liquidation_type"/>
                <field name="producer_id"/>
                <field name="qty_tn"/>
                <field name="price_per_tn"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="move_id"/>
            </tree>
        </field>
    </record>

    <record id="view_grain_liquidation_form" model="ir.ui.view">
        <field name="name">grain.liquidation.form</field>
        <field name="model">grain.liquidation</field>
        <field name="arch" type="xml">
            <form string="LiquidaciÃ³n (LPG/LSG)">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="liquidation_type"/>
                            <field name="coe"/>
                            <field name="producer_id"/>
                            <field name="broker_id"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="delivery_date"/>
                            <field name="port"/>
                            <field name="grain_grade"/>
                        </group>
                    </group>

                    <group string="Cantidad / Precio">
                        <group>
                            <field name="qty_tn"/>
                            <field name="price_per_tn"/>
                        </group>
                        <group>
                            <field name="tax_id"/>
                            <field name="amount_untaxed" readonly="1"/>
                            <field name="amount_tax" readonly="1"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                    </group>

                    <group string="Contabilidad">
                        <field name="clearing_account_id"/>
                        <field name="journal_id"/>
                        <field name="move_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
